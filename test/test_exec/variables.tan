import "runtime";

pub fn main(argc: int, argv: char**) : int {
    // test default values
    var integer: i8;
    assert(integer == 0 as i8);
    var fp: float;
    assert(fp == 0.0);
    var b: bool;
    assert(!b);
    assert(b == false);

    // variable name
    var _ = 0;

    var typed: int = 1;
    var typed_f: float = 1.0;
    assert(typed == 1);
    assert(typed_f == 1.0);

    var shit = 10; // int
    var wat = 0 - 600; // int
    var f = 1.0; // float
    assert(shit == 10);
    assert(wat == -600);
    assert(f == 1.0);

    {
        var a = var b = 1.0;
        assert(a == 1.0);
        assert(b == 1.0);
    }

    var two = 2.0;

    var c = var a: float = b = two;
    assert(a == 1.0);
    assert(b != 2.0);
    assert(b == true);
    assert(c == 1.0);

    var d = two = (a + b) / 2.;
    assert(two == 1.0);
    assert(d == 1.0);

    // scope and shadowing tests
    var var1 = 100;
    var var2 = 200;
    {
        var var1 = 999;
        var var2 = 888;
        assert(var1 == 999);
        assert(var2 == 888);
    }
    assert(var1 == 100);
    assert(var2 == 200);

    @test_comp_error(var_decl_cannot_deduce_lhs_type) {
        var tmp;
    }
    @test_comp_error(assignment_invalid_lhs) {
        "haha" = 5;
    }
    @test_comp_error(assignment_invalid_lhs) {
        i32 = 5;
    }

    @test_comp_error(redeclare_variable) {
        var var1: i32;
    }

    print("SUCCESS\n");
    return 0;
}
