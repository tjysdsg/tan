import "runtime/print.tan";
import "runtime/debug.tan";

pub fn main(argc: int, argv: char**) : int {
    // test default values
    var integer: i8;
    assert(integer == 0 as i8);
    var fp: float;
    assert(fp == 0.0);
    var b: bool;
    assert(!b);
    assert(b == false);

    var typed: int = 1;
    var typed_f: float = 1.0;
    assert(typed == 1);
    assert(typed_f == 1.0);

    var shit = 10; // int
    var wat = 0 - 600; // int
    var f = 1.0; // float
    assert(shit == 10);
    assert(wat == -600);
    assert(f == 1.0);

    var a = var b = 1.0;
    assert(a == 1.0);
    assert(b == 1.0);

    var two = 2.0;

    var c = a = b = two;
    assert(a == 2.0);
    assert(b == 2.0);
    assert(c == 2.0);

    var d = two = (a + b) / 2.;
    assert(a == 2.0);
    assert(b == 2.0);
    assert(c == 2.0);
    assert(d == 2.0);

    /// scope and shadowing tests
    var var1 = 100;
    var var2 = 200;
    {
        var var1 = 999;
        var var2 = 888;
        assert(var1 == 999);
        assert(var2 == 888);
    }
    assert(var1 == 100);
    assert(var2 == 200);

    print("SUCCESS\n");
    return 0;
}
