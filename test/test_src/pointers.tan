import "runtime/debug.tan";
import "runtime/print.tan";

struct A {
    var a: i32;
    var b: float;
}

pub fn main() : int {
    var n = 1;
    var pn = &n;
    assert(n == 1);
    assert(*pn == 1);
    *pn = 2;
    assert(n == 2);
    assert(*pn == 2);

    var a: A;
    var shit = &a;
    a.a = 100;
    a.b = -2.5;
    assert(shit.a == 100);
    assert(*shit.a == 100);
    shit.a = 21;
    assert(a.a == 21);

    var p = &(shit.a);
    p = &p[1];
    var pf = p as float*;
    assert(*pf == -2.5);

    var ptr = &1;
    assert(*ptr == 1);

    print("SUCCESS\n");
    return 0;
}
